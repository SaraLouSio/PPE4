    <div class='background-books'>

        <div class="container"  >
            <h1 class="center text-center font-fam-brush" style="min-height: 250px; font-size: 150px;color: #ad8c71"><i>Book Store</i></h1>
        </div>
    </div>
    {#<div class="separator-test"></div>#}
   
        <div class="container-fluid" >
            <div class="row">
                <div class="col-sm-3" style="margin-top: 75px;">
                    <div class="container border-custom-little font-fam-courrier">
                        <div class='row'>
                            <div>
                                {% for cat in categories%}
                                    <h4>
                                        <a href="{{ path('home', { 'categorie': cat.getCatLibelle }) }}" 
                                           class="btn-transparent">
                                            {{ cat.getCatLibelle }}
                                        </a>
                                    </h4>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-8 offset-1 " style="margin-top: 50px;">
                    <div class="container-fluid font-fam-courrier" >

                        <h1 class="title" >{{page}}</h1>
                        <hr>
                        <div class="container-fluid">
                            <div class="row">
                                {% for produit in produits %}
                                    <div class="col-sm-3">
                                        <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
                                            <img class="card-img-top" height="250"  src="{{produit.getProImage}}" alt="Card image cap">
                                            <div class="card-body">
                                                <p class="card-text">{{produit.getProNom}}</p>
                                                <a href="{{ path('produit', { 'id': produit.getProId }) }}" class="btn btn-secondary">Plus d'infos</a>
                                            </div>
                                        </div>
                                    </div>
                                {%endfor%}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
